<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_NTMTuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foody App"
        android:textAlignment="center"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userNameEt_NTMTuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_NTMTuan"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/passwordEtLogIn_NTMTuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/userNameEt_NTMTuan"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/passwordText_NTMTuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="UserName"
        app:layout_constraintTop_toBottomOf="@+id/textView_NTMTuan"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/userNameText_NTMTuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Password"
        app:layout_constraintTop_toBottomOf="@+id/userNameEt_NTMTuan"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/LogInButton_NTMTuan"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="116dp"
        android:text="Log In"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEtLogIn_NTMTuan" />

    <TextView
        android:id="@+id/isHaveAccountTxT_NTMTuan"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Don't have account ?"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LogInButton_NTMTuan" />

    <Button
        android:id="@+id/RegisterBtnLogIn_NTMTuan"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Register"
        app:layout_constraintStart_toEndOf="@+id/isHaveAccountTxT_NTMTuan"
        app:layout_constraintTop_toBottomOf="@+id/LogInButton_NTMTuan" />


</androidx.constraintlayout.widget.ConstraintLayout>